# Include package data
include README.md
include LICENSE
include requirements*.txt
include .env.example
include *.md

# Include configuration files
include brouser_agent/config/*.json
include brouser_agent/config/*.yaml
include brouser_agent/config/*.yml

# Include static assets
recursive-include brouser_agent/assets *
recursive-include brouser_agent/gui/assets *
recursive-include brouser_agent/gui/themes *

# Include plugin templates
recursive-include brouser_agent/plugins/templates *

# Include documentation
recursive-include docs *

# Include examples
recursive-include examples *

# Exclude development files
exclude *.pyc
exclude */__pycache__/*
exclude .git/*
exclude .pytest_cache/*
exclude build/*
exclude dist/*
exclude *.egg-info/*